                    html += '  <td class="text-end">' + product['price'] + '</td>';
                    html += '  <td class="text-end">' + product['total'] + '</td>';
                    html += '  <td class="text-end" style="width: 3px;"><button type="button" value="' + product['cart_id'] + '" data-bs-toggle="tooltip" title="{{ button_remove }}" data-oc-loading-text="{{ text_loading }}" class="btn btn-danger"><i class="fas fa-minus-circle"></i></button></td>';
                    html += '</tr>';

                    if (product['shipping'] != 0) {
                        shipping = true;
                    }
                }
            }

            if (!shipping) {
                $('select[name=\'shipping_method\'] option').removeAttr('selected');
                $('select[name=\'shipping_method\']').prop('disabled', true);
                $('#button-shipping-method').prop('disabled', true);
