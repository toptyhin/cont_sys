<form id="recurring-list" data-oc-load="{{ action }}" data-oc-target="#recurring">
  <div class="table-responsive">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <td class="text-end"><a href="{{ sort_order_recurring }}"{% if sort == 'or.order_recurring_id' %} class="{{ order|lower }}"{% endif %}>{{ column_order_recurring_id }}</a></td>
          <td class="text-end"><a href="{{ sort_order }}"{% if sort == 'or.order_id' %} class="{{ order|lower }}"{% endif %}>{{ column_order_id }}</a></td>
          <td class="text-start"><a href="{{ sort_reference }}"{% if sort == 'or.reference' %} class="{{ order|lower }}"{% endif %}>{{ column_reference }}</a></td>
          <td class="text-start"><a href="{{ sort_customer }}"{% if sort == 'customer' %} class="{{ order|lower }}"{% endif %}>{{ column_customer }}</a></td>
          <td class="text-start"><a href="{{ sort_status }}"{% if sort == 'or.status' %} class="{{ order|lower }}"{% endif %}>{{ column_status }}</a></td>
          <td class="text-start d-none d-lg-table-cell"><a href="{{ sort_date_added }}"{% if sort == 'or.date_added' %} class="{{ order|lower }}"{% endif %}>{{ column_date_added }}</a></td>
          <td class="text-end">{{ column_action }}</td>
        </tr>
      </thead>
      <tbody>
        {% if recurrings %}
          {% for recurring in recurrings %}
            <tr>
              <td class="text-end">{{ recurring.order_recurring_id }}</td>
              <td class="text-end">{{ recurring.order_id }}</td>
              <td class="text-start">{{ recurring.reference }}</td>
              <td class="text-start">{{ recurring.customer }}</td>
              <td class="text-start">{{ recurring.status }}</td>
              <td class="text-start d-none d-lg-table-cell">{{ recurring.date_added }}</td>
              <td class="text-end"><a href="{{ recurring.view }}" data-bs-toggle="tooltip" title="{{ button_order_recurring }}" class="btn btn-info"><i class="fas fa-eye"></i></a> <a href="{{ recurring.order }}" data-bs-toggle="tooltip" title="{{ button_order }}" class="btn btn-info"><i class="fas fa-shopping-cart"></i></a></td>
            </tr>
          {% endfor %}
        {% else %}
          <tr>
            <td class="text-center" colspan="7">{{ text_no_results }}</td>
          </tr>
        {% endif %}
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="col-sm-6 text-start">{{ pagination }}</div>
    <div class="col-sm-6 text-end">{{ results }}</div>
  </div>
</form>