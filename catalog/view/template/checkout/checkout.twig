{{ header }}
<div id="checkout-checkout" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
      <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>

  {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fas fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  {% endif %}

  <div class="row row-cols-1">{{ column_left }}
    <div id="content" class="col">
      {{ content_top }}
      <h1>{{ heading_title }}</h1>
      {% if not logged %}
      <div id="checkout-login">{{ login }}</div>
    <br/>
      <div id="checkout-register">{{ register }}</div>
    {% else %}

      {% if payment_address %}
        <br/>
        <div id="checkout-payment-address">{{ payment_address }}</div>
      {% endif %}

      {% if shipping_required %}
        <br/>
        <div id="checkout-shipping-address">{{ shipping_address }}</div>
      {% endif %}


      <div class="row row-cols-2">

        <div class="col mb-3 required">

          {% if shipping_required %}
            <br/>
            <div id="checkout-shipping-method">{{ shipping_method }}</div>
          {% endif %}

        </div>


        <br/>
        <div class="col mb-3 required">
          <div id="checkout-payment-method">{{ payment_method }}</div>
        </div>
        <br/>
        <div id="checkout-confirm">

        </div>


        {% endif %}



        {{ content_bottom }}
      </div>

      {{ column_right }}
    </div>
  </div>
{{ footer }}