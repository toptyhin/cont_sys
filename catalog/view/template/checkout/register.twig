<script type="text/javascript"><!--
// Account
$('#checkout-register input[name=\'account\']').on('click', function() {
    var value = $(this).attr('value');

    if (value == 0) {
        $('#password').addClass('d-none');
    }

    if (value == 1) {
        $('#password').removeClass('d-none');
    }
})

$('#checkout-register input[name=\'account\']:checked').trigger('click');

// Customer Group
$('#checkout-register input[name=\'customer_group_id\']').on('change', function() {
    chain.attach(function() {
        return $.ajax({
            url: 'index.php?route=checkout/checkout|customfield&customer_group_id=' + $('#checkout-register input[name=\'customer_group_id\']:checked').val(),
            dataType: 'json',
            success: function(json) {
                $('#checkout-register .custom-field').hide();
                $('#checkout-register .custom-field').removeClass('required');

                for (i = 0; i < json.length; i++) {
                    custom_field = json[i];

                    $('.custom-field-' + custom_field['custom_field_id']).show();

                    if (custom_field['required']) {
                        $('.custom-field-' + custom_field['custom_field_id']).addClass('required');
                    }
                }
            }, error: function(xhr, ajaxOptions, thrownError) {
                oc.alert('danger', thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
                console.log(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
            }
        });
    });
});

$('#checkout-register input[name=\'customer_group_id\']:checked').trigger('change');

// Shipping Address
$('#checkout-register input[name=\'shipping_address\']').on('change', function() {
    if ($(this).prop('checked')) {
        $('#shipping-address').addClass('d-none');
    } else {
        $('#shipping-address').removeClass('d-none');
    }
});

$('#checkout-register input[name=\'shipping_address\']:checked').trigger('change');

$('#checkout-payment-method').load('index.php?route=checkout/payment_method|save');

$('#checkout-register select[name$=\'_country_id\']').on('change', function() {
    var element = this;
    var type = $(this).attr('name').slice(0, -11);

    chain.attach(function() {
        return $.ajax({
            url: 'index.php?route=localisation/country&country_id=' + $('#checkout-register select[name=\'' + type + '_country_id\']').val(),
            dataType: 'json',
            beforeSend: function() {
                $(element).prop('disabled', true);
            },
            complete: function() {
                $(element).prop('disabled', false);
            },
            success: function(json) {
                if (json['postcode_required'] == '1') {
                    $('#checkout-register input[name=\'' + type + '_postcode\']').parent().parent().addClass('required');
                } else {
                    $('#checkout-register input[name=\'' + type + '_postcode\']').parent().parent().removeClass('required');
                }

                html = '<option value="">{{ text_select }}</option>';

                if (json['zone'] && json['zone'] != '') {
                    for (i = 0; i < json['zone'].length; i++) {
                        html += '<option value="' + json['zone'][i]['zone_id'] + '"';

                        if (json['zone'][i]['zone_id'] == '{{ zone_id }}') {
                            html += ' selected="selected"';
                        }

                        html += '>' + json['zone'][i]['name'] + '</option>';
                    }
                } else {
                    html += '<option value="0" selected="selected">{{ text_none }}</option>';
                }

                $('#checkout-register select[name=\'' + type + '_zone_id\']').html(html);
            },
            error: function(xhr, ajaxOptions, thrownError) {
                oc.alert('danger', thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
                console.log(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
            }
        });
    });
});

$('#checkout-register select[name=\'payment_country_id\']').trigger('change');
$('#checkout-register select[name=\'shipping_country_id\']').trigger('change');


